{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["./src/*"],
      "@app/*": ["./app/*"],
      "@assets/*": ["./assets/*"],

      "@lib/effector": ["./src/lib/effector-factory"],
      "@lib/effector/*": ["./src/lib/effector-factory/*"],

      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],

      "@elements": ["./src/elements"],
      "@elements/*": ["./src/elements/*"],

      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],

      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],

      "@models": ["./src/models"],
      "@models/*": ["./src/models/*"],

      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],

      "@ui": ["./src/ui"],
      "@ui/*": ["./src/ui/*"],

      "@modules": ["./modules"],
      "@modules/*": ["./modules/*"],

      "@locales": ["./assets/locales"],
      "@locales/*": ["./assets/locales/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
